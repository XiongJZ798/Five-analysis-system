# EditorConfig is awesome: https://EditorConfig.org

# 顶层配置文件
root = true

# 所有文件
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown文件
[*.md]
trim_trailing_whitespace = false

# JavaScript/Vue文件
[*.{js,jsx,ts,tsx,vue}]
quote_type = single
max_line_length = 100
semi = false
singleQuote = true
trailingComma = es5
bracketSpacing = true
arrowParens = avoid
